<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GridStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BackButtonStyle">
        <item name="iconTint">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="FrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">@dimen/margin_standard</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsImageViewStyle">
        <item name="android:layout_width">@dimen/layout_width_50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="SettingsLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>

    <style name="header_page">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_text_size2</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="errorText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="NavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_icon_selector_night</item>
        <item name="itemTextColor">@drawable/bottom_nav_icon_selector_night</item>
        <item name="android:background">@color/black_main</item>
    </style>

    <style name="HistorySearchText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/error_search_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/search_text</item>
        <item name="android:layout_marginTop">@dimen/button_radius</item>
    </style>

    <style name="reloadButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SongSearchListName">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/ys_display_regular</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:textColor">@color/color_bback</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textSize">@dimen/track_size_16</item>
    </style>

    <style name="SettingsBackgroundColorStyle">
        <item name="android:background">@color/white_black</item>
    </style>

    <style name="BackButtonSettingsStyle">
        <item name="android:tint">@color/like_bg_color</item>
    </style>

    <style name="TextSearchProblem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/search_text</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SongSearchListAuthor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="PlaylistTitleStyle">
        <item name="android:textColor">@color/like_bg_color</item>
    </style>

    <style name="BottomSheetTitleStyle">
        <item name="android:textColor">@color/like_bg_color</item>
    </style>

    <style name="BottomSheetStyle">
        <item name="android:backgroundTint">@color/white_black</item>
    </style>

    <style name="editTextInput">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="editText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/text_field_bg_dark</item>
        <item name="boxStrokeColor">@drawable/edit_text_selector_night</item>
        <item name="android:textColorHint">@drawable/text_selector_night</item>
    </style>

</resources>
