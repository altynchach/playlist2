<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySearch">




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="@dimen/padding_standard"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0dp"
            tools:ignore="UselessParent">




            <TextView
                android:id="@+id/action_bar_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_standard"
                android:text="@string/search"
                android:fontFamily="@font/ys_text_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/header_text_size2"
                android:textStyle="bold" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp"
            tools:ignore="ExtraText,UselessParent">




            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_marginStart="@dimen/margin_standard"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@drawable/search_background"
                android:drawableStart="@drawable/search"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                app:layout_constraintEnd_toStartOf="@+id/clearButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="LabelFor,TouchTargetSizeCheck,VisualLintTextFieldSize,SpeakableTextPresentCheck" />




            <ImageView
                android:id="@+id/clearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clear"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />


        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>