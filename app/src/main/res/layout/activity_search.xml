<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="@dimen/padding_standard"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/back_button2"
                style="@style/BackButtonStyle"
                android:adjustViewBounds="true"
                android:src="@drawable/settings_back"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/action_bar_search"
                android:layout_marginStart="@dimen/margin_standard"
                android:text="@string/search"
                style="@style/header_page" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp"
            tools:ignore="ExtraText,UselessParent">

            <EditText
                android:id="@+id/inputEditText"
                android:cursorVisible="true"
                android:importantForAutofill="no"
                android:textCursorDrawable="@drawable/cursor_color"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="9dp"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:background="@drawable/search_background"
                android:drawableStart="@drawable/search"
                android:hint="@string/search"
                android:textColorHint="@color/icon_search"
                android:textColor="@color/search_text"
                tools:ignore="InefficientWeight,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/nothingFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <ImageView
                    style="@style/search_image_view"
                    android:contentDescription="@string/nothing_found"
                    android:src="@drawable/img_nothing_found_light" />

                <TextView
                    style="@style/errorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/nothing_found" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/connectionProblem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    style="@style/search_image_view"
                    android:contentDescription="@string/nothing_found"
                    android:src="@drawable/img_connection_problem" />

                <TextView
                    style="@style/errorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/connection_problem" />

                <Button
                    android:id="@+id/reload_button"
                    style="@style/reloadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/reload" />

            </LinearLayout>

        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="383dp"
            android:layout_height="603dp"
            android:layout_columnSpan="2"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputEditText" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
