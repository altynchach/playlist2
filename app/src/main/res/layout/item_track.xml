<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/track_view_holder"
    android:layout_width="match_parent"
    android:layout_height="@dimen/track_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/track_size_40">

        <ImageView
            android:id="@+id/track_image"
            android:layout_width="@dimen/track_size_45"
            android:layout_height="@dimen/track_size_45"
            android:layout_marginTop="@dimen/icon_padding"
            android:layout_marginEnd="@dimen/icon_padding" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/track_name"
                android:textColor="@color/color_bback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text=""
                android:textSize="@dimen/track_size_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/point"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/track_artist"
                    android:textColor="@color/color_name_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="@dimen/track_size_13" />

                <TextView
                    android:id="@+id/track_time"
                    android:textColor="@color/color_name_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text=""
                    android:textSize="@dimen/track_size_13" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_forward_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginEnd="@dimen/icon_padding"
        android:src="@drawable/list_arrow"/>
</FrameLayout>
